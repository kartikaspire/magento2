<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="customermassaction">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to perform Action for selected customers?</message>
                        <title translate="true">Customer Sync</title>
                    </confirm>
                    <url path="module/sync/index" />
                    <type>customermassaction</type>
                    <label translate="true">Customer Sync</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>