<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <module>
            <configurable_cron>
                <enable>1</enable>
            </configurable_cron>
            <time>
                <!-- Every day at midnight -->
                <schedule>0 0 * * *</schedule>
            </time>
        </module>
    </default>
</config>